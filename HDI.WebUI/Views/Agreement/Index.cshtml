@{
    ViewData["Title"] = "Anlaşmalar";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-bold"><i class="fas fa-file-contract text-warning me-2"></i>Anlaşmalar</h5>
        <button id="btnRefresh" class="btn btn-sm btn-light border"><i class="fas fa-sync"></i></button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>Anlaşma Başlığı</th>
                        <th>Risk Limiti</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody id="agreementTableBody"></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="keywordModal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Riskli Kelime Tanımla</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" id="modalAgreementId">
                <div class="mb-3">
                    <label class="form-label fw-bold">Kelime / Keyword</label>
                    <input type="text" id="keywordWord" class="form-control" placeholder="Örn: Hasar, Yangın, İptal">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Risk Ağırlığı (Puan)</label>
                    <input type="number" id="keywordWeight" class="form-control" value="10" min="1" max="100">
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" id="btnSaveKeyword" class="btn btn-success px-4">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts { <script src="~/js/agreement.js"></script> }