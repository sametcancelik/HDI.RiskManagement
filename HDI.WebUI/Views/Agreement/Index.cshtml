@{
    ViewData["Title"] = "Anlaşma ve Risk Parametreleri";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="fas fa-file-signature me-2"></i>Aktif Anlaşmalar
                    </h5>
                    <button id="btnRefresh" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-sync-alt me-1"></i> Yenile
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;">#</th>
                                    <th>Anlaşma Başlığı</th>
                                    <th>Risk Limiti</th>
                                    <th>Tenant</th>
                                    <th class="text-end">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody id="agreementTableBody">
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                                        Veriler yükleniyor...
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="keywordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">
                    <i class="fas fa-plus-circle me-2"></i>Yeni Riskli Kelime Tanımla
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" id="modalAgreementId">
                
                <div class="mb-3">
                    <label class="form-label fw-600">Riskli Kelime / İfade</label>
                    <input type="text" id="keywordWord" class="form-control" placeholder="Örn: Yangın, Sel, İptal, Hasar">
                    <div class="form-text text-muted">Sistem bu kelimeyi analiz sırasında tespit ederse ağırlık puanı ekleyecektir.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-600">Risk Ağırlığı (Tutar/Puan)</label>
                    <div class="input-group">
                        <input type="number" id="keywordWeight" class="form-control" value="100" min="1">
                        <span class="input-group-text">₺</span>
                    </div>
                    <div class="form-text">Bu kelimenin risk değerini giriniz.</div>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" id="btnSaveKeyword" class="btn btn-primary px-4">
                    <i class="fas fa-save me-1"></i> Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/agreement.js"></script>
}